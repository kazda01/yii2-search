{
  "name": "kazda01/yii2-search",
  "description": "A simple search engine that allows the user to search for models by defined attributes and rules.",
  "keywords": [
    "yii2",
    "extension",
    "search",
    "model",
    "ajax",
    "widget"
  ],
  "type": "yii2-extension",
  "license": "BSD-3-Clause",
  "autoload": {
    "psr-4": {
      "kazda01\\search\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Kazda AntonÃ­n",
      "email": "antoninkazda@gmail.com"
    },
    {
      "name": "Mifka Radim",
      "email": "radimmifka@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4.0",
    "yiisoft/yii2": "^2.0",
    "yiisoft/yii2-bootstrap5": "2.0.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "*",
    "slevomat/coding-standard": "^8.15",
    "phpunit/phpunit": "^9.6"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
